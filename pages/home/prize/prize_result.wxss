  font-size: 36rpx;
  line-height: 75rpx;
  color: white;
} */

.content-container {
  position: fixed;
  top: 460rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
  display: block;
}

.line {
  height: 0.5px;
  background-color: #e0e0e0;
  width: 200rpx;
  margin-top: 43rpx;
}

.result-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%
}

.result-header {
  display: flex;
  flex-direction: row;
  width: 100%;
  font-size: 28rpx;
  justify-content: center;
  align-items: center;
}

.result-header text {
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-top: 30rpx;
}

.result {
  width: 75%;
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
  padding-bottom: 40rpx;
}

.userinfo {
  width: 33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.userinfo image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.userinfo text {
  font-size: 26rpx;
  margin-top: 3rpx;
}

.tips {
  font-size: 25rpx;
  margin-top: 20rpx;
  color: #a8a8a8;
}

.rule-container {
  position: fixed;
  background-color: rgba(51, 51, 51, 0.2);
  /* width: 130rpx; */
  border-radius: 5px;
  justify-content: center;
  /* height: 42rpx; */
  color: white;
  font-size: 22rpx;
  left: 150rpx;
  /* line-height: 42rpx; */
  padding-left: 25rpx;
  padding-right: 25rpx;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
}

.dialog-container {
  position: fixed;
  margin-left: 115rpx;
  width: 520rpx;
  top: 50%;
  margin-top: -380rpx;
}

.dialog-rule-container image {
  width: 45rpx;
  height: 45rpx;
  position: absolute;
  right: 0rpx;
  top: 0rpx;
}

.dialog-rule-container {
  display: flex;
  position: relative;
  width: 520rpx;
  flex-direction: column;
  background-color: white;
  border-radius: 12px;
  align-items: center;
  justify-content: center;
  padding-bottom: 30rpx;
  border-style: solid;
  border-color: #e0e0e0;
  border-width: 0.5px;
}

.rule-header {
  display: flex;
  flex-direction: row;
  align-content: center;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.rule-header text {
  font-size: 32rpx;
  font-weight: bolder;
  margin-left: 5rpx;
  margin-right: 5rpx;
}

.min-line {
  height: 1px;
  background-color: #bebebe;
  width: 130rpx;
  margin-top: 23rpx;
}

.dialog-rule-container text {
  font-size: 26rpx;
  color: #3a3a3a;
  line-height: 50rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
}

.button-container {
  width: 210rpx;
  text-align: center;
  line-height: 70rpx;
  height: 70rpx;
  font-size: 32rpx;
  border-style: solid;
  border-color: #f75458;
  border-width: 1px;
  color: #f75458;
  border-radius: 25px;
}

