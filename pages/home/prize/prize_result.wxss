page {
  height: 100%;
  background-color: #f9f9f9;
}

.bg-image {
  height: 600rpx;
  position: absolute;
  /* float: left; */
  width: 100%;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  -moz-background-size: 100% 100%;
}

.container {
  /* display: flex;
  flex-direction: column; */
  position: relative;
}

.main-container {
  display: flex;
  width: 700rpx;
  flex-direction: column;
  border-radius: 8px;
  box-shadow: 0 4px 3px #e8e8e8;
  background-color: white;
}

.prize-info-container {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
  margin-left: 30rpx;
}

.prize-info-text {
  display: flex;
  flex-direction: column;
  width: 450rpx;
}

.prize-title {
  font-size: 26rpx;
  color: #6f7475;
}

.prize-name {
  font-size: 42rpx;
  color: #2f2f2f;
  margin-top: 10rpx;
  font-weight: bold;
  /* text-decoration: underline;
  text-decoration-color: #5ee1c9;
  text-decoration-line:  line-through;
  text-decoration-style: 10px solid; */
}

.prize-info-container image {
  width: 158rpx;
  height: 158rpx;
  margin-left: 40rpx;
  border-radius: 8px;
}

.countdown-container {
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
  justify-content: center;
  margin-top: 60rpx;
}

.join-button-container {
  background-color: #5ee1c9;
  box-shadow: 0 3px 2px #a4ddd3;
  align-items: center;
  margin: 50rpx 30rpx 0 30rpx;
  border-radius: 25px;
  text-align: center;
  height: 75rpx;
    font-size: 36rpx;
  line-height: 75rpx;
  color: white;
}

