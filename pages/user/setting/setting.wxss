page {
  background-color: #f9fcfc;
}

.container {
  width: 100%;
}

.notification-container {
  background-color: white;
  width: 100%;
  height: 100rpx;
}

.notification-container text {
  font-size: 32rpx;
  color: #373f3d;
  line-height: 100rpx;
  margin-left: 30rpx;
}

.notification-container switch {
  height: 70rpx;
  float: right;
  margin-right: 20rpx;
  margin-top: 15rpx;
}

.notification-container input {
  width: 300rpx;
  font-size: 35rpx;
  line-height: 100rpx;
}

.advice-container {
  display: block;
  margin-left: 30rpx;
  margin-top: 25rpx;
  margin-right: 30rpx;
}

.advice-input-container {
  background-color: white;
  border-radius: 20rpx;
  margin-top: 25rpx;
  padding-bottom: 20rpx;
}

.advice-input-container textarea {
  padding-top: 20rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-bottom: 20rpx;
  font-size: 30rpx;
  height: 255rpx;
  text-align: start;
}

.advice-stars-container {
  display: flex;
  flex-direction: row;
  height: 60rpx;
  align-items: center;
  margin-top: 20rpx;
  margin-left: 40rpx;
}

.advice-stars {
  display: flex;
  flex-direction: row;
  /* line-height: 60rpx; */
}

.advice-stars image {
  width: 60rpx;
  height: 60rpx;
}

.advice-stars text {
  line-height: 60rpx;
  font-size: 30rpx;
  margin-left: 5rpx;
  color: #4f4f4f;
}

.contact-container {
  margin-top: 50rpx;
}

.contact-input-container {
  background-color: white;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
}

.contact-input-container text {
  font-size: 32rpx;
  color: #373f3d;
  line-height: 100rpx;
  margin-left: 30rpx;
  width: 145rpx;
}

.contact-input-container input {
  background-color: white;
  font-size: 32rpx;
  text-align: start;
  padding-left: 40rpx;
  height: 100rpx;
}

.submit-button-container {
  width: 700rpx;
  height: 80rpx;
  background-color: #5ee1c9;
  text-align: center;
  align-items: center;
  margin-left: 25rpx;
  margin-right: 25rpx;
  margin-top: 60rpx;
  border-radius: 8px;
}

.submit-button-container text {
  color: white;
  font-size: 32rpx;
  line-height: 80rpx;
}
